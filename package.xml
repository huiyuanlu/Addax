<assembly
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-component-1.1.2.xsd">
    <id>release</id>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <moduleSets>
        <moduleSet>

            <!-- Enable access to all projects in the current multi-module build! -->
            <useAllReactorProjects>true</useAllReactorProjects>

            <!-- Now, select which projects to include in this module-set. -->
            <includes>
                <include>com.wgzhao.addax:dbffilereader</include>
            </includes>
            <binaries>
                <outputDirectory>plugin</outputDirectory>
                <outputFileNameMapping>reader/${artifact.artifactId}/${artifact.artifactId}-${artifact.version}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
                <unpack>false</unpack>
                <dependencySets>
                    <dependencySet>
                        <unpack>false</unpack>
                        <scope>runtime</scope>
                        <outputDirectory>plugin/reader/${module.artifactId}/libs</outputDirectory>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>

        <moduleSet>

            <!-- Enable access to all projects in the current multi-module build! -->
            <useAllReactorProjects>true</useAllReactorProjects>

            <!-- Now, select which projects to include in this module-set. -->
            <includes>
                <include>com.wgzhao.addax:dbffilewriter</include>
            </includes>
            <binaries>
                <outputDirectory>plugin</outputDirectory>
                <outputFileNameMapping>writer/${artifact.artifactId}/${artifact.artifactId}-${artifact.version}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
                <unpack>false</unpack>
                <dependencySets>
                    <dependencySet>
                        <unpack>false</unpack>
                        <scope>runtime</scope>
                        <outputDirectory>plugin/writer/${module.artifactId}/libs</outputDirectory>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>
